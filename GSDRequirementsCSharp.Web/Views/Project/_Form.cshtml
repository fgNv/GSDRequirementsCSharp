@using GSDRequirementsCSharp.Infrastructure.Internationalization
@using GSDRequirementsCSharp.Web.Models

<article data-ng-class="{ 'global-loading' : pendingRequests > 0 }">
    <h4 data-ng-hide="project.id">@Sentences.createProject</h4>
    <h4 data-ng-show="project.id">@Sentences.editProject {{project.name}}</h4>

    @Html.Partial("_ContentFields")
    
    <script type="text/ng-template" id="translationContent.html">
        <div class="modal-header">
            <h3 class="modal-title">asdas</h3>
        </div>
        <div class="modal-body">
            @Html.Partial("_ContentFields")
        </div>
        <div class="modal-footer">
            <div class="btn-group">
                <button class="btn btn-default"
                        data-ng-click="cancel()">
                    @Sentences.cancel
                </button>
                <button class="btn btn-primary"
                        data-ng-click="conclude()">
                    @Sentences.save
                </button>
            </div>
        </div>
    </script>

    <h4>
        @Sentences.translations
        <button class="btn btn-primary"
                data-ng-click="addTranslation()"
                title="@Sentences.addTranslation">
            <span class="glyphicon glyphicon-plus"></span>
        </button>
    </h4>
    <div class="alert alert-info" data-ng-show="translations.length == 0">
        @Sentences.noTranslationAdded
    </div>
    <table class="table" data-ng-show="translations.length > 0">
        <thead>
            <tr>
                <th>@Sentences.language</th>
                <th>@Sentences.actions</th>
            </tr>
        </thead>
        <tbody>
            <tr data-ng-repeat="translation in translations">
                <td>{{translation.locale}}</td>
                <td>
                    <button class="btn">
                        <span class="glyphicon glyphicon-trash"
                              title="@Sentences.removeTranslation"></span>
                        <span class="glyphicon glyphicon-pencil"
                              title="@Sentences.editTranslation"></span>
                    </button>
                </td>
            </tr>
        </tbody>
    </table>

    <div class="btn-group">
        <button class="btn btn-default"
                data-ng-click="project = null">
            @Sentences.cancel
        </button>
        <button class="btn btn-primary"
                type="button"
                data-ng-click="save()">
            @Sentences.save
        </button>
    </div>
</article>
