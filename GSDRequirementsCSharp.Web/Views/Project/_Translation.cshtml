@using GSDRequirementsCSharp.Infrastructure.Internationalization
@using GSDRequirementsCSharp.Web.Models

<article data-ng-class="{ 'global-loading' : pendingRequests > 0 }">
    <h4>@Sentences.addTranslationForProject {{project.name}}</h4>
    <div class="row">
        <div class="col-md-2">
            {{originalDescriptionLocale}}
        </div>
        <div class="col-md-6">
            {{originalDescription}}
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            @TextInputHelper.TextArea("descriptionTranslation", Sentences.description, true, Att.NgModel("descriptionTranslation"))
        </div>
    </div>

    <div class="btn-group">
        <button class="btn btn-default"
                data-ng-click="project = null">
            @Sentences.cancel
        </button>
        <button class="btn btn-primary"
                type="button"
                data-ng-click="save()">
            @Sentences.save
        </button>
    </div>
</article>

