<!DOCTYPE html>

@using GSDRequirementsCSharp.Infrastructure.Internationalization

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/content/vendors.min.css" rel="stylesheet" />
    <link href="~/content/styles.min.css" rel="stylesheet" />
    <script src="~/scripts/vendor.js"></script>
    <script src="~/scripts/app.js"></script>

    @Html.Partial("~/Views/Shared/Internationalization/DataToJS.cshtml")
</head>
<body data-ng-app="app" data-ng-controller="MainController">

    <nav class="navbar navbar-default">
        <div class="navbar-header">
            <a class="navbar-brand" href="#">
                <!-- <img src="~/content/images/world-logo.gif" height="30px" />-->
            </a>
        </div>
        <div class="collapse navbar-collapse">
            <ul class="nav navbar-nav">
                <li class="dropdown">
                    <a href="#"
                       class="dropdown-toggle"
                       data-toggle="dropdown"
                       role="button"
                       aria-haspopup="true" aria-expanded="false">
                        @Sentences.artifacts <span class="caret"></span>
                    </a>
                    <ul class="dropdown-menu">
                        <li>
                            <a href="@Url.Action("Index", "Requirement")">
                                @Sentences.requirements
                            </a>
                        </li>
                        <li>
                            <a href="@Url.Action("Index", "UseCaseDiagram")">
                                @Sentences.useCaseDiagrams
                            </a>
                        </li>
                        <li>
                            <a href="@Url.Action("Index", "ClassDiagram")">
                                @Sentences.classDiagrams
                            </a>
                        </li>
                    </ul>
                </li>
                <li>
                    <a href="@Url.Action("Index","Package")">
                        @Sentences.packages
                    </a>
                </li>
                <li class="dropdown">
                    <a href="#"
                       class="dropdown-toggle"
                       data-toggle="dropdown"
                       role="button"
                       aria-haspopup="true" aria-expanded="false">
                        @Sentences.permissions <span class="caret"></span>
                    </a>
                    <ul class="dropdown-menu">
                        <li>
                            <a href="@Url.Action("ProfileManagement", "Permission")">
                                @Sentences.manageProfiles
                            </a>
                        </li>
                        <li>
                            <a href="@Url.Action("UserManagement", "Permission")">
                                @Sentences.manageUsers
                            </a>
                        </li>
                    </ul>
                </li>
                <li class="dropdown">
                    <a href="#"
                       class="dropdown-toggle"
                       data-toggle="dropdown"
                       role="button"
                       aria-haspopup="true" aria-expanded="false">
                        @Sentences.report <span class="caret"></span>
                    </a>
                    <ul class="dropdown-menu">
                        <li>
                            <a href="@Url.Action("ProfileManagement", "Permission")">
                                @Sentences.traceabilityMatrix
                            </a>
                        </li>
                    </ul>
                </li>
            </ul>

            <ul class="nav navbar-nav navbar-right">
                <li>
                    <a href="@Url.Action("Index", "Project")">
                        @Sentences.manageProjects
                    </a>
                </li>
                <li>
                    <div class="navbar-form">
                        <div class="form-group">
                            <label>
                                @Sentences.currentProject
                                <select class="form-control">
                                    <option>Projeto X</option>
                                    <option>Projeto Y</option>
                                </select>
                            </label>
                        </div>
                    </div>
                </li>
                <li>
                    @Html.Partial("Internationalization/CurrentCultureSetterForm")
                </li>
            </ul>
        </div>
    </nav>

    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="container">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>
</body>
</html>
