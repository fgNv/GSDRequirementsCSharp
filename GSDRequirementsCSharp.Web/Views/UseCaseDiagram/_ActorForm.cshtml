@using GSDRequirementsCSharp.Infrastructure.Internationalization

<h3 data-ng-hide="currentActor.cell">
    @Sentences.addActor
</h3>
<h3 data-ng-show="currentActor.cell">
    @Sentences.editActor
</h3>

<div class="row">
    <div class="col-md-12">
        <div data-ng-form="actorMetadataForm">
            <div class="row">
                <div class="col-md-6">
                    <div class="select-box" data-ng-if="utility">
                        <label>@Sentences.language</label>
                        <ui-select data-ng-model="contentData.locale"
                                   data-theme="bootstrap"
                                   data-search-enabled="false"
                                   append-to-body="false">
                            <ui-select-match>
                                {{$select.selected}}
                                <span class="glyphicon glyphicon-ok"
                                      style="color: #008A21"
                                      data-ng-show="currentActor.containsLocale($select.selected)">
                                </span>
                            </ui-select-match>
                            <ui-select-choices repeat="locale in locales track by locale">
                                <span ng-bind="locale"></span>
                                <span class="glyphicon glyphicon-ok"
                                      style="color: #008A21"
                                      data-ng-show="currentActor.containsLocale(locale)">
                                </span>
                            </ui-select-choices>
                        </ui-select>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="usecase-name">@Sentences.name *</label>
                        <input type="text"
                               required=""
                               class="form-control"
                               id="usecase-name"
                               placeholder="{{currentActor.getName()}}"
                               data-ng-model="currentActor.contentDictionary[contentData.locale].name" />
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="btn-group" style="margin-bottom: 20px; ">
        <button class="btn btn-default"
                data-ng-click="backToDiagram()">
            @Sentences.cancel
        </button>
        <button class="btn btn-primary"
                data-ng-disabled="actorMetadataForm.$invalid"
                data-ng-click="saveActor(currentActor)">
            @Sentences.save
        </button>
    </div>
</div>