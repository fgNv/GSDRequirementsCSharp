
@using GSDRequirementsCSharp.Infrastructure.Internationalization
@{ 
    ViewBag.Title = "GSD-R: " + Sentences.registerOrLogin;
}
<h2 style="text-align: center">GSD @Sentences.requirements</h2>

<div class="row" style="margin-top: 20px ">
    <div class="col-md-3 col-md-offset-3">
        <a class="btn btn-default btn-lg btn-block" href="@Url.Action("Login","Home")">
            @(Sentences.login)
        </a>
    </div>

    <div class="col-md-3">
        <a href="@Url.Action("Index","Registration")" class="btn btn-default btn-lg btn-block">
            @(Sentences.register)
        </a>
    </div>
</div>
