@using GSDRequirementsCSharp.Infrastructure.Internationalization

<div class="form-horizontal">

    <input type="hidden" data-ng-init="defaultConditionPlaceholder = '@Sentences.whenTheUserIsAnAdministrator'" />
    <input type="hidden" data-ng-init="defaultSubjectPlaceholder = '@Sentences.theSystem'" />
    <input type="hidden" data-ng-init="defaultActionPlaceholder = '@Sentences.mustAllowAccessPermissionManagement'" />
    
    <div class="form-group">
        <label class="col-sm-1 control-label">
            @Sentences.condition
        </label>

        <div class="col-sm-8">
            <input type="text"
                   class="form-control"
                   data-ng-model="requirement.condition"
                   placeholder="{{conditionPlaceholder}}">
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-1 control-label">
            @Sentences.subject
        </label>
        <div class="col-sm-8">
            <input type="text"
                   class="form-control"
                   data-ng-model="requirement.subject"
                   placeholder="{{subjectPlaceholder}}">
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-1 control-label">
            @Sentences.action
        </label>
        <div class="col-sm-8">
            <input type="text"
                   class="form-control"
                   data-ng-model="requirement.action"
                   placeholder="{{actionPlaceholder}}">
        </div>
    </div>
</div>