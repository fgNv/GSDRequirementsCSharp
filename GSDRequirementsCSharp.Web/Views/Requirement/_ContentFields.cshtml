@using GSDRequirementsCSharp.Infrastructure.Internationalization


<div class="form-horizontal">
    <div class="form-group">
        <label class="col-sm-1 control-label">
            @Sentences.condition
        </label>

        <div class="col-sm-8">
            <input type="text"
                   class="form-control"
                   data-ng-model="requirement.condition"
                   placeholder="@Sentences.whenTheUserIsAnAdministrator">
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-1 control-label">
            @Sentences.subject
        </label>
        <div class="col-sm-8">
            <input type="text"
                   class="form-control"
                   data-ng-model="requirement.subject"
                   placeholder="@Sentences.theSystem">
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-1 control-label">
            @Sentences.action
        </label>
        <div class="col-sm-8">
            <input type="text"
                   class="form-control"
                   data-ng-model="requirement.action"
                   placeholder="@Sentences.mustAllowAccessPermissionManagement">
        </div>
    </div>
</div>