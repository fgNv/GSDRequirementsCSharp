@using GSDRequirementsCSharp.Infrastructure.Internationalization

<article data-ng-class="{ 'global-loading' : pendingRequests > 0 }">
    <h2 data-ng-show="!requirement.id">
        @Sentences.addRequirement
    </h2>
    <h2 data-ng-show="requirement.id">
        @Sentences.editRequirement {{"requirement.id"}}
    </h2>

    <div class="form-horizontal">
        <div class="form-group">
            <label class="col-sm-1 control-label">
                @Sentences.package
            </label>

            <div class="col-sm-8">
                <select type="text"
                        class="form-control"
                        data-ng-model="requirement.packageId"
                        data-ng-options="package.id as package.description for
                                         package in packagesOptions"></select>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-1 control-label">
                @Sentences.condition
            </label>

            <div class="col-sm-8">
                <input type="text"
                       class="form-control"
                       data-ng-model="requirement.condition"
                       placeholder="@Sentences.whenTheUserIsAnAdministrator">
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-1 control-label">
                @Sentences.subject
            </label>
            <div class="col-sm-8">
                <input type="text"
                       class="form-control"
                       data-ng-model="requirement.subject"
                       placeholder="@Sentences.theSystem">
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-1 control-label">
                @Sentences.action
            </label>
            <div class="col-sm-8">
                <input type="text"
                       class="form-control"
                       data-ng-model="requirement.action"
                       placeholder="@Sentences.mustAllowAccessPermissionManagement">
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-1 control-label">
                @Sentences.difficulty
            </label>
            <div class="col-sm-8">
                <select type="text"
                        class="form-control"
                        data-ng-model="requirement.difficulty"
                        data-ng-options="difficulty.value as difficulty.label   
                                         for difficulty in difficultyOptions">
                </select>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-1 control-label">
                @Sentences.rank
            </label>
            <div class="col-sm-8">
                <input type="text"
                       class="form-control"
                       data-ng-model="requirement.rank">
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-1 control-label">
                @Sentences.type
            </label>
            <div class="col-sm-8">
                <select type="text"
                        class="form-control"
                        data-ng-model="requirement.requirementType"
                        data-ng-options="type.value as type.label for
                                         type in requirementTypeOptions"></select>
            </div>
        </div>
        <div class="btn-group col-sm-offset-1">
            <button type="button"
                    data-ng-click="currentRequirement = null"
                    class="btn btn-default">
                @Sentences.cancel
            </button>
            <button type="button"
                    class="btn btn-primary"
                    data-ng-click="save()">
                @Sentences.save
            </button>
        </div>
    </div>
</article>
