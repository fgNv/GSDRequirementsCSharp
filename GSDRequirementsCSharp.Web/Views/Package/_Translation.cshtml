@using GSDRequirementsCSharp.Infrastructure.Internationalization
@using GSDRequirementsCSharp.Web.Models

<article data-ng-class="{ 'global-loading' : pendingRequests > 0 }">
    <h3>@Sentences.addTranslationForPackage {{package.description}}</h3>

    <h4>@Sentences.original</h4>
    <div class="row">
        <div class="col-md-2">
            {{originalDescriptionLocale}}
        </div>
        <div class="col-md-6">
            {{originalDescription}}
        </div>
    </div>

    <h4 style="margin-top: 15px ">@Sentences.translation</h4>

    <div class="row">
        <div class="col-md-6">
            @TextInputHelper.TextInput("description", Sentences.description, true, Att.NgModel("descriptionTranslation"))
        </div>
    </div>

    <div class="btn-group">
        <button class="btn btn-default"
                data-ng-click="package = null">
            @Sentences.cancel
        </button>
        <button class="btn btn-primary"
                type="button"
                data-ng-click="save()">
            @Sentences.save
        </button>
    </div>
</article>

