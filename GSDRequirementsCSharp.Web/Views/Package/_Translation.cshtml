@using GSDRequirementsCSharp.Infrastructure.Internationalization
@using GSDRequirementsCSharp.Web.Models


<article data-ng-class="{ 'global-loading' : pendingRequests > 0 }">
    <h3>@Sentences.addTranslationForPackage </h3>

    <h4>
        @Sentences.original
    </h4>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <select class="form-control"
                        data-ng-model="displayLocale"
                        data-ng-options="locale.name as locale.label for locale in availableLocaleContents"></select>
            </div>
        </div>
    </div>
    
    <div class="row">
        <div class="col-md-2">
            @Sentences.description
        </div>
        <div class="col-md-6">
            {{originalDescription}}
        </div>
    </div>
        
    <article data-gsd-package-translation-list=""
             data-translations="translations"
             data-translations-already-provided="translationsAlreadyProvided"></article>

    <div class="btn-group">
        <button class="btn btn-default"
                data-ng-click="package = null">
            @Sentences.cancel
        </button>
        <button class="btn btn-primary"
                type="button"
                data-ng-click="save()">
            @Sentences.add
        </button>
    </div>
</article>

